Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintmedium

URxvt*fading:           3
URxvt*font:             xft:Ubuntu Mono derivative Powerline:size=10:antialias=true
URxvt*iso14755:         false
URxvt*letterSpace:      -1
URxvt*perl-ext-common:  default,clipboard,confirm-paste,keyboard-select
URxvt*saveLines:        99999
URxvt*scrollBar_right:  true
URxvt*scrollstyle:      plain
URxvt*scrollTtyOutput:  false
URxvt*scrollTtyKeypress:true

URxvt*keysym.C-C:       perl:clipboard:copy
URxvt*keysym.C-V:       perl:clipboard:paste
URxvt*keysym.C-W:       perl:clipboard:paste_escaped
URxvt*keysym.C-F:       perl:searchable-scrollback:start
URxvt*keysym.C-s:       perl:keyboard-select:activate
URxvt*keysym.C-S:       perl:keyboard-select:search

xterm*background:       seashell
xterm*cursorColor:      black
xterm*foreground:       black
xterm*faceName:         Ubuntu Mono derivative Powerline
xterm*faceSize:         10
xterm*locale:           true
xterm*renderFont:       true
xterm*saveLines:        99999
xterm*scrollTtyOutput:  false
xterm*termName:         xterm-256color
! shift-select -> copy to clipboard
! ctrl-v -> paste from clipboard
!
*VT100.Translations: #override \
    Shift <Btn1Up>: select-end(CLIPBOARD) \n\
    Shift Ctrl <Key>V: insert-selection(CLIPBOARD)

